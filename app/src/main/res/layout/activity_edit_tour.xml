<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Tour Details"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"

            android:textSize="32sp"/>

        <EditText
            android:id="@+id/tour_name_et"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:hint="Name" />

        <EditText
            android:id="@+id/tour_description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20sp"
            android:hint="Description"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/add_recording_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:padding="14dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/purpleDark"
            android:text="Edit Recording" />

        <Button
            android:id="@+id/save_tour_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:padding="14dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/purpleDark"
            android:text="Save" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>